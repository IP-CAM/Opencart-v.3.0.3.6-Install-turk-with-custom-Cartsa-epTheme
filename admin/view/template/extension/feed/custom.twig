{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-custom" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
        <h1>{{ heading_title }}</h1>
        <ul class="breadcrumb">
          {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
          {% endfor %}
        </ul>
      </div>
    </div>
    <div class="container-fluid">
      {% if error_warning %}
        <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
      {% endif %}
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
        </div>
        <div class="panel-body">
          <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-custom" class="form-horizontal">

          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_feed_url }}</label>
            <div class="col-sm-10">
                <div class="form-control" style="height: auto;">
                {% for feed_name,feed_url in feed_urls %}
                    {% if feed_name != '' %}
                    <div class="feeds">
                        <a class="btn feed-name pull-left" href="{{ feed_url }}" target="_blank">{{ feed_name }}</a>
                        <a class="feed-btn btn btn-default pull-right" onclick="copyURL('{{ feed_url }}')">
                            <i class="fa fa-copy"></i> {{ text_copy }}</a>
                        <a class="feed-btn btn btn-default pull-right" target="_blank" href="{{ feed_url }}">
                            <i class="fa fa-download"></i> {{ text_open }}</a>
                    </div>
                    {% else %}
                    <div>{{ feed_url }}</div>
                    {% endif %}
                {% endfor %}
                    <div class="feeds">
                        <div class="feed-name pull-left">{{ entry_template_name }}</div>
                        <a class="feed-btn btn btn-default pull-right" target="_blank" href="{{ feed_template_url }}">
                            <i class="fa fa-download"></i> {{ entry_template_download }}</a>
                    </div>
                </div>
            </div>
          </div>
          <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ help_feed_url }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
          </div>

          {{ sm_status }}
          {{ sm_template_location }}
          {{ sm_save_to_file }}
          {{ sm_compression }}
          {{ sm_use_meta }}
          {{ sm_clear_html }}
          {{ sm_language }}
          {{ sm_options }}
          {{ sm_currency }}
          {{ sm_image_cache }}
          {{ sm_in_stock_products }}
          {{ sm_disabled_products }}
          {{ sm_sold_out_products }}
          {{ sm_carriers }}
          {{ sm_shop_address }}

          </form>
        </div>
      </div>
    </div>
  </div>
<style>
.feeds {
    width: 100%;
    display: inline-block;
    background-color: #f8f8f8;
    margin: -1px;
}
.feeds:hover {
    background-color:#aaaaaa;
}
.feed-name {
    font-weight: bold;color: black;
    font-size: 15px;
    text-align: center;
    display: inline;
    padding: 4px;
}
.feed-name:hover {
    color: black;
}
.feed-btn {
    padding: 2px;
    margin: 3px 6px;
}
.switching:nth-of-type(even) {
    background-color: #e1e1e1;
    padding: 5px;
}
.switching:nth-of-type(odd) {
    background-color: #ebebeb;
    padding: 5px;
}
</style>
<script>
    function copyURL(url) {
        if (!navigator.clipboard){
            alert('{{ text_copy_fail }}');
        } else{
            navigator.clipboard.writeText(url).then(
                function(){
                    alert('{{ text_copy_success }}');
                })
            .catch(
                function() {
                    alert('{{ text_copy_fail }}');
                }
            );
        }
    }
</script>
  {{ footer }}
