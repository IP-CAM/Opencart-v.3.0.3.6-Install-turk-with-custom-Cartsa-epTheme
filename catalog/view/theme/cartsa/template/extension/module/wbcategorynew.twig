<style>
.w-100 {
    width: 100%!important;
}

.newSectionsItem {
    padding-left: 6px;
    padding-right: 6px;
    flex: 0 0 21.666667%;
    flex-grow: 0;
    flex-shrink: 0;
    flex-basis: 21.6667%;
    max-width: 21.666667%;
}
.topBannerItem .bannerText {
    height: 58px;
    text-align: center;
    font-size: 15px;
    background-color: #dff8f6;
    border-bottom-right-radius: 15px;
    border-bottom-left-radius: 15px;
    line-height: 58px;
    font-family: Geomanist Medium;
}

.topBannerItem .bannerImage img {
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
}
</style>

<section class="container-fluid mt-4">
	<div class="homecategory martb">
		<h1 class="heading text-center">
			<span>{{ cheading_title }}</span>
		</h1>
		<div style="padding:30px 0px;">
			{% for category in categories %}
				<div class="col-xs-12 col-sm-12 col-md-4 topBannerItem newSectionsItem">
					<a href="{{ category.href }}">
						<div class="bannerImage">
                            {% if category.image_name %}
						    	<img src="{{ category.image_name }}" class="w-100" alt="" style="background-color:#dff8f6">
						    {% else %}
						    	<img src="image/no_image.png" class="w-100" alt="">
						    {% endif %}
						</div>
						<div class="bannerText" style="background-color:#dff8f6">
							{{ category.name }}
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
</section>

